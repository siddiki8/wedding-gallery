generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Photo {
  id        String   @id @default(cuid())
  url       String
  name      String
  likes     Int      @default(0)
  createdAt DateTime @default(now())
}

model Email {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  createdAt DateTime @default(now())
}

model Message {
  id        String   @id @default(cuid())
  content   String
  name      String
  createdAt DateTime @default(now())
}

